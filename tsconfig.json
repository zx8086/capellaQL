{
  "compilerOptions": {
    // Enable latest features
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,
    "typeRoots": ["./node_modules/@types", "./src"],

    // Bundler mode
    "moduleResolution": "node",
    // "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": true,
    "noEmit": false,
    "noImplicitAny": false,

    // Best practices
    "strict": true,
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": true,
    "declarationMap": true, // If you're generating declaration files
    "sourceRoot": "/", // Help debuggers locate source files
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "$lib": ["src/lib"],
      "$config": ["src/config.ts"],
      "$lib/*": ["src/lib/*"],
      "$utils": ["src/utils"],
      "$utils/*": ["src/utils/*"],
      "$models": ["src/models"],
      "$models/*": ["src/models/*"]
    },
    "types": [],
    // Some stricter flags (enabled for better code quality)
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noPropertyAccessFromIndexSignature": true,

    // Additional recommended settings
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["src/**/*", "src/global.d.ts", "__tests__/**/*"],
  "exclude": ["node_modules", "dist"]
}
